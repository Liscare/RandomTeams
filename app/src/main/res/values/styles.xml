<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/AppTheme.Text</item>
        <item name="android:buttonStyle">@style/AppTheme.Button</item>
        <item name="android:checkboxStyle">@style/AppTheme.CheckBox</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Text" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:fontFamily">casual</item>
    </style>

    <style name="AppTheme.Button" parent="android:Widget.Button">
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:fontFamily">casual</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginRight">@dimen/margin_sides</item>
        <item name="android:layout_marginLeft">@dimen/margin_sides</item>
        <item name="android:background">@drawable/button_background</item>
    </style>

    <style name="AppTheme.CheckBox" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:fontFamily">casual</item>
    </style>
</resources>